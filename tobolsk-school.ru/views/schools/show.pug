extends ../layout

block nav
  include ../include/nav
block header
  include ../include/header   
block content
  .row.bord
    .col.l10.s12        
      h4.
        Автошкола #{school.number}) #{school.name}
  .row
    .col.l10.s12
      ul.tabs
        li.tab.col.s3
          a(href='#main') Главная
        li.tab.col.s3
          a(href='#description') Описание
    .col.l12#main
      .row
        .col.l3
          .card
            .card-image
              img(src='/images/logo/' + school._id + '.jpg', alt="Логотип")
            .card-action.center 
              h5.
                Единая справочная сайта 
              a.phone(href='tel:+7(932)321-26-94') +7(932)321-26-94
        .col.l6.s12
          .card
            .card-title.center.adress
              h5.
                Категории:
            .card-action
              p #{school.category}    
            .card-title.center.adress
              h5.
                Адреса:
            .card-action
              p #{school.adress1}  
              p #{school.adress2}  
              p #{school.adress3}  
              p #{school.adress4}  
              p #{school.adress5}  
              p #{school.adress6}  
              p #{school.adress7}  
              p #{school.adress8}  
              p #{school.adress9}  
              p #{school.adress10}  
              p #{school.adress11}  
              p #{school.adress12}  
              p #{school.adress13}  
              p #{school.adress14}  
              p #{school.adress15}  
              p #{school.adress16}  
              p #{school.adress17}  
              p #{school.adress18}  
              p #{school.adress19}  
              p #{school.adress20}              
        .col.l3.s12
          include ../include/banner    
    .col.l12#description
      .row
        .col.l9
          .card
            .card-content
              p #{school.description}            
        .col.l3
          include ../include/banner                  
block footer
  include ../include/footer  
